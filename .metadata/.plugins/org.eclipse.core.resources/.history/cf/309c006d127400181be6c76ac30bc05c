/**
 * 
 * @author Bradley
 *This class performs calculations on a bank account
 */
public class MicroBankCalculator 
{

	private static double balance;
//This method calculates a bank account total after 30 years with a daily deposit of p1 and an interest rate of r1
	public MicroBankCalculator(double p1, double r1)
	{
		
	double a1 = (p1 * 365) * Math.pow((1 + (r1)), 30);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 29);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 28);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 27);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 26);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 25);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 24);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 23);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 22);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 21);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 20);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 19);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 18);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 17);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 16);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 15);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 14);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 13);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 12);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 11);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 10);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 9);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 8);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 7);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 6);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 5);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 4);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 3);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 2);
	a1 = a1 + (p1 * 365) * Math.pow((1 + (r1)), 1);
	setBalance(a1);
	}
//This method returns the balance of the bank account
	public static double getBalance() {
		return balance;
	}
//This method sets the balance if the bank account to the new balance
	public void setBalance(double balance) {
		this.balance = balance;
	}
}
